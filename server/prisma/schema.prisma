model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  email    String  @unique
  password String
  quizes   ParticipantsInQuiz[]
  quiz     Quiz[]
}

model Quiz {
  id     Int      @id @default(autoincrement())
  title  String
  user   User     @relation(fields: [hostId], references: [id])
  hostId   Int
  questions String
  createdAt  DateTime   @default(now())
  participants  ParticipantsInQuiz[]
}

model ParticipantsInQuiz {
  user          User     @relation(fields: [participantId], references: [id])
  participantId Int
  quiz          Quiz     @relation(fields: [quizId], references: [id])
  quizId        Int
  @@id([participantId, quizId])
}
